<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hc.smartconvert.MainActivity">

    <LinearLayout
        android:id="@+id/Liner1"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/red1">
        ัั  <TextView
        android:layout_width="640dp"
        android:layout_height="wrap_content"
        android:text="        LENGTH"
        android:textSize="50sp"
        android:textStyle="bold"
        android:id="@+id/textView" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="66.5dp"
        android:layout_toRightOf="@+id/Liner1"
        android:background="@color/red1">

    </LinearLayout>
    <LinearLayout
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/Liner1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/text">
        <EditText
            android:layout_width="192dp"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/Input"
            android:maxLength="12"
            android:textSize="30dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Liner1"
        android:layout_above="@+id/Convert1"
        android:layout_toRightOf="@+id/linearLayout"
        android:layout_toEndOf="@+id/linearLayout">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Unit" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Convert1"
        android:layout_below="@+id/linearLayout"
        android:background="@color/Gray">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:text="        Convert"
            android:textStyle="bold"
            android:textSize="50dp"
            android:id="@+id/Convert"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/Convert1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_below="@+id/Convert"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height= "40dp"
                android:id="@+id/Liner1">

                <TextView
                    android:id="@+id/Nano"
                    android:layout_height="match_parent"
                    android:layout_width="192dp"
                    android:textAlignment="viewEnd"
                    android:background="@color/Red"
                    android:textSize="17dp"
                    android:textColor="@color/Black"
                    />

                <TextView
                    android:id="@+id/UnitNano"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" Nano"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:background="@color/Orange"
                    android:textColor="@color/Black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/Liner2"
                android:layout_below="@+id/Liner1">
                <TextView
                    android:id="@+id/Micro"
                    android:layout_width="192dp"
                    android:layout_height="match_parent"
                    android:textAlignment="viewEnd"
                    android:background="@color/Orange"
                    android:textSize="17dp"
                    android:textColor="@color/Black"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" Micro"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:background="@color/Red"
                    android:textColor="@color/Black"
                    android:id="@+id/UnitMicro" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/Liner2"
                android:id="@+id/Liner3">

                <TextView
                    android:id="@+id/Milli"
                    android:layout_width="192dp"
                    android:layout_height="match_parent"
                    android:textAlignment="viewEnd"
                    android:background="@color/Red"
                    android:textSize="17dp"
                    android:textColor="@color/Black"
                    />

                <TextView
                    android:id="@+id/UnitMilli"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" Millemeters"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:background="@color/Orange"
                    android:textColor="@color/Black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/Liner3"
                android:id="@+id/Liner4"
                >
                <TextView
                    android:id="@+id/Centi"
                    android:layout_width="192dp"
                    android:layout_height="match_parent"
                    android:textAlignment="viewEnd"
                    android:background="@color/Orange"
                    android:textSize="17dp"
                    android:textColor="@color/Black"
                    />
                <TextView
                    android:id="@+id/UnitCenti"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" Centimeter"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:background="@color/Red"
                    android:textColor="@color/Black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/Liner4"
                android:id="@+id/Liner5"
                >
                <TextView
                    android:id="@+id/Meter"
                    android:layout_width="192dp"
                    android:layout_height="match_parent"
                    android:textAlignment="viewEnd"
                    android:background="@color/Red"
                    android:textSize="17dp"
                    android:textColor="@color/Black"
                    />
                <TextView
                    android:id="@+id/UnitMete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" Meters"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:background="@color/Orange"
                    android:textColor="@color/Black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/Liner5"
                android:id="@+id/Liner6"
                >
                <TextView
                    android:id="@+id/Kilo"
                    android:layout_width="192dp"
                    android:layout_height="match_parent"
                    android:textAlignment="viewEnd"
                    android:background="@color/Orange"
                    android:textSize="17dp"
                    android:textColor="@color/Black"
                    />
                <TextView
                    android:id="@+id/UnitKilo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" Kilometers"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:background="@color/Red"
                    android:textColor="@color/Black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/Liner7"
                android:layout_below="@+id/Liner6"
                >
                <TextView
                    android:id="@+id/Digit"
                    android:layout_width="192dp"
                    android:layout_height="match_parent"
                    android:textAlignment="viewEnd"
                    android:background="@color/Red"
                    android:textSize="17dp"
                    android:textColor="@color/Black"
                    />
                <TextView
                    android:id="@+id/UnitDigit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" Digit"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:background="@color/Orange"
                    android:textColor="@color/Black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/Liner8"
                android:layout_below="@+id/Liner7"
                >
                <TextView
                    android:id="@+id/Foot"
                    android:layout_width="192dp"
                    android:layout_height="match_parent"
                    android:textAlignment="viewEnd"
                    android:background="@color/Orange"
                    android:textSize="17dp"
                    android:textColor="@color/Black"
                    />
                <TextView
                    android:id="@+id/UnitFoot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" Foot"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:background="@color/Red"
                    android:textColor="@color/Black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/Liner9"
                android:layout_below="@+id/Liner8"
                >
                <TextView
                    android:id="@+id/Yard"
                    android:layout_width="192dp"
                    android:layout_height="match_parent"
                    android:textAlignment="viewEnd"
                    android:background="@color/Red"
                    android:textSize="17dp"
                    android:textColor="@color/Black"
                    />
                <TextView
                    android:id="@+id/UnitYard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" Yard"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:background="@color/Orange"
                    android:textColor="@color/Black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/Liner10"
                android:layout_below="@id/Liner9"
                >
                <TextView
                    android:id="@+id/Mile"
                    android:layout_width="192dp"
                    android:layout_height="match_parent"
                    android:textAlignment="viewEnd"
                    android:background="@color/Orange"
                    android:textSize="17dp"
                    android:textColor="@color/Black"
                    />

                <TextView
                    android:id="@+id/UnitMile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Red"
                    android:text=" Mile"
                    android:textColor="@color/Black"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/Liner11"
                android:layout_below="@+id/Liner10"
                >
                <TextView
                    android:id="@+id/nmile"
                    android:layout_width="192dp"
                    android:layout_height="match_parent"
                    android:textAlignment="viewEnd"
                    android:background="@color/Red"
                    android:textSize="17dp"
                    android:textColor="@color/Black"
                    />
                <TextView
                    android:id="@+id/Nauticalmile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" Nauticalmile"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:background="@color/Orange"
                    android:textColor="@color/Black"/>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
